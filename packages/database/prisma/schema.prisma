// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  ADMIN
  MANAGER
  DRIVER
  NANNY
  MAID
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

// Models
model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  phone       String?
  role        Role     @default(MAID)
  pin         String?
  pinSetAt    DateTime?
  language    String   @default("en")
  altLanguage String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  createdTasks    Task[]           @relation("TaskCreatedBy")
  taskAssignments TaskAssignment[]
  shoppingLists   ShoppingList[]   @relation("ShoppingListAssignedTo")
  healthLogs      HealthLog[]      @relation("HealthLogLoggedBy")
  mealLogs        MealLog[]        @relation("MealLogLoggedBy")
  activityLogs    KidActivityLog[] @relation("KidActivityLogLoggedBy")
  daysOff         DayOff[]         @relation("DayOffUser")
  approvedDaysOff DayOff[]         @relation("DayOffApprovedBy")
  userActivityLogs ActivityLog[]
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  category    String?
  status      TaskStatus @default(PENDING)
  dueDate     DateTime?
  recurring   String?
  photoProof  String?
  createdById String
  completedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  createdBy   User             @relation("TaskCreatedBy", fields: [createdById], references: [id], onDelete: Cascade)
  assignments TaskAssignment[]
}

model TaskAssignment {
  id     String @id @default(uuid())
  taskId String
  userId String

  // Relations
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, userId])
}

model InventoryItem {
  id           String   @id @default(uuid())
  name         String
  category     String?
  subCategory  String?
  quantity     Int      @default(0)
  unit         String?
  lowThreshold Int?
  location     String?
  brand        String?
  flavor       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model FrozenMeal {
  id          String   @id @default(uuid())
  name        String
  quantity    Int      @default(0)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  mealLogs MealLog[]
}

model ShoppingList {
  id          String    @id @default(uuid())
  type        String?
  assignedTo  String?
  status      String    @default("active")
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  assignedUser User?          @relation("ShoppingListAssignedTo", fields: [assignedTo], references: [id], onDelete: Cascade)
  items        ShoppingItem[]
}

model ShoppingItem {
  id        String   @id @default(uuid())
  listId    String
  name      String
  quantity  Int      @default(1)
  unit      String?
  purchased Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  list ShoppingList @relation(fields: [listId], references: [id], onDelete: Cascade)
}

model Kid {
  id        String   @id @default(uuid())
  name      String
  birthDate DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  healthLogs   HealthLog[]
  mealLogs     MealLog[]
  activityLogs KidActivityLog[]
  schedules    KidSchedule[]
}

model HealthLog {
  id        String   @id @default(uuid())
  kidId     String
  type      String
  notes     String?
  loggedBy  String?
  createdAt DateTime @default(now())

  // Relations
  kid    Kid   @relation(fields: [kidId], references: [id], onDelete: Cascade)
  logger User? @relation("HealthLogLoggedBy", fields: [loggedBy], references: [id], onDelete: Cascade)
}

model MealLog {
  id           String   @id @default(uuid())
  kidId        String
  mealType     String
  foodSource   String?
  foodName     String?
  frozenMealId String?
  rating       Int?
  photo        String?
  portions     Float?
  loggedBy     String?
  createdAt    DateTime @default(now())

  // Relations
  kid        Kid         @relation(fields: [kidId], references: [id], onDelete: Cascade)
  frozenMeal FrozenMeal? @relation(fields: [frozenMealId], references: [id], onDelete: Cascade)
  logger     User?       @relation("MealLogLoggedBy", fields: [loggedBy], references: [id], onDelete: Cascade)
}

model KidActivityLog {
  id        String   @id @default(uuid())
  kidId     String
  activity  String
  category  String?
  notes     String?
  loggedBy  String?
  createdAt DateTime @default(now())

  // Relations
  kid    Kid   @relation(fields: [kidId], references: [id], onDelete: Cascade)
  logger User? @relation("KidActivityLogLoggedBy", fields: [loggedBy], references: [id], onDelete: Cascade)
}

model KidSchedule {
  id        String   @id @default(uuid())
  kidId     String
  activity  String
  dayOfWeek Int
  time      String
  location  String?
  notes     String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  kid Kid @relation(fields: [kidId], references: [id], onDelete: Cascade)
}

model DayOff {
  id         String   @id @default(uuid())
  userId     String
  date       DateTime
  type       String?
  status     String   @default("pending")
  approvedBy String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  user     User  @relation("DayOffUser", fields: [userId], references: [id], onDelete: Cascade)
  approver User? @relation("DayOffApprovedBy", fields: [approvedBy], references: [id], onDelete: Cascade)
}

model FredSchedule {
  id        String   @id @default(uuid())
  date      DateTime @unique
  location  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ActivityLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  details   Json?
  createdAt DateTime @default(now())

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Translation {
  id        String   @id @default(uuid())
  key       String
  language  String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([key, language])
}

model AppConfig {
  id        String   @id @default(uuid())
  type      String
  value     String
  label     String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([type, value])
}

model MealPlan {
  id          String    @id @default(uuid())
  date        DateTime
  mealType    String
  description String?
  recipe      String?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([date, mealType])
}
